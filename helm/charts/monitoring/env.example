# Monitoring Stack Environment Variables
# Copy this file to .env and fill in your actual values

# Domain configuration
DOMAIN=ogaro.com

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-password-here

# Basic auth credentials for Prometheus and Alertmanager
PROMETHEUS_BASIC_AUTH_USER=prometheus
PROMETHEUS_BASIC_AUTH_PASSWORD=your-prometheus-password

ALERTMANAGER_BASIC_AUTH_USER=alertmanager
ALERTMANAGER_BASIC_AUTH_PASSWORD=your-alertmanager-password

# TLS certificate configuration
TLS_SECRET_NAME=kogaro-monitoring-tls

# Resource limits (optional - defaults will be used if not set)
PROMETHEUS_CPU_LIMIT=125m
PROMETHEUS_MEMORY_LIMIT=256Mi
GRAFANA_CPU_LIMIT=100m
GRAFANA_MEMORY_LIMIT=200Mi 